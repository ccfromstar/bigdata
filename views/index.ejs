<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
		<title>大数据分析</title>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="renderer" content="webkit">
		<meta http-equiv="Cache-Control" content="no-siteapp" />
		<link rel="stylesheet" href="css/amazeui.min.css" />
		<script src="js/jquery.min.js"></script>
		<script src="js/amazeui.min.js"></script>
		<style>
			.am-alert{
				position: fixed;
				top:0;
				left:0;
				z-index:9999;
				margin-top:0 !important;
				width:100%;
			}
			.none{
				display: none;
			}
		</style>
	</head>
	<body class="am-with-fixed-navbar">
		<!-- Header -->
		<header data-am-widget="header" class="am-header am-header-default am-no-layout am-header-fixed">
			<h1 class="am-header-title">
    			<a href="#title-link">大数据分析</a>
  			</h1>
		</header>
		<ul class="am-list">
		  <li>&nbsp;&nbsp;总利润：<span id="totalnum">加载中...</span></li>
		  <li>&nbsp;&nbsp;日利润：<span id="todaynum">加载中...</span></li>
		</ul>
		<form class="am-form">
		  <fieldset>
		    <legend>数据录入</legend>

		    <div class="am-form-group">
		      <div class="am-input-group am-datepicker-date" data-am-datepicker="{format: 'yyyy-mm-dd'}">
				  <input type="text" class="am-form-field" id="date" placeholder="日期" readonly>
				  <span class="am-input-group-btn am-datepicker-add-on">
				    <button class="am-btn am-btn-default" type="button"><span class="am-icon-calendar"></span> </button>
				  </span>
			   </div>
		    </div>
	
				<div class="am-form-group">
					<select data-am-selected id="cname">
						
					</select>
				</div>

				<div class="am-form-group">
					<select data-am-selected id="platform">
						<option value="*">平台</option>
						<option value="1">聚享游</option>
						<option value="2">快乐赚</option>
						<option value="4">UU898</option>
					</select>
				</div>
				
				<div class="am-form-group">
					<input type="number" class="" id="price" placeholder="利润">
				</div>

				<button type="button" class="am-btn am-btn-default" onclick="sumbitDoc()">提交</button>
		  </fieldset>
		</form>
		<table class="am-table">
		    <thead>
		        <tr>
		            <th>日期</th>
		            <th>项目</th>
		            <th>平台</th>
		            <th>利润</th>
		        </tr>
		    </thead>
		    <tbody id="tbody1">
		   
		    </tbody>
		</table>
		<div class="am-alert am-alert-success none successinfo" data-am-alert>
		</div>
		<script>
			function getNum(){
				$.ajax({
					type: "POST",
					url: "/service/getTotal",
					success: function(data) {
						$("#totalnum").html('¥ '+data[0].sum);
						//console.log(data[0]);
						$("#todaynum").html('¥ '+data[0].today);
					}
				});
				$.ajax({
					type: "POST",
					url: "/service/getDetail",
					success: function(data) {
						var html = '';
						for(var i in data){
							html += '<tr>';
							html += '<td>'+data[i].date+'</td>';
							html += '<td>'+data[i].name+'</td>';
							html += '<td>'+data[i].pname+'</td>';
							html += '<td>'+data[i].price+'</td>';
							html += '</tr>';
						}
						$('#tbody1').html(html);
					}
				});
			}

			function getList(){
				$.ajax({
					type: "POST",
					url: "/service/getList",
					success: function(data) {
						var html = '<option value="*">项目名称</option>';
						for(var i in data){
							html += '<option value="'+data[i].id+'">'+data[i].name+'</option>';
						}
						$('#cname').html(html);
					}
				});
			}

			function sumbitDoc(){
				$.ajax({
					type: "POST",
					url: "/service/create",
					data: {
						date: $("#date").val(),
						cname: $("#cname").val(),
						platform: $("#platform").val(),
						price: $("#price").val()
					},
					success: function(data) {
						//alert("录入成功！");
						$('.successinfo').html('<p>操作成功</p>').removeClass("none");
						setTimeout(function() {
							$('.successinfo').addClass("none");
						}, 2000);
						getNum();
					}
				});
			}

			getNum();
			getList();
		</script>
	</body>
</html>
